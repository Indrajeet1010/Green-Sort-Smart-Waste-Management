    <br><br><br><br><br>

    <div class="container1">
        <h1>Shopping Cart</h1>
        <table class="table table-xs">
            <tr>
                <th></th>
                <th>Description</th>
                <th class="text-right">Qtn</th>
                <th class="text-right">Price</th>
                <th class="text-right">Total</th>
                <th class="text-right"></th>
            </tr>
            <% for (let camps of ca){ %>
                <tr class="item-row">
                    <td>
                        <img src=<%=camps.image%> alt="">
                    </td>
                    <td>
                        <p>
                            <strong>
                                <%=camps.typeofwaste %>
                            </strong>
                        </p>
                        <p>
                            <%=camps.query %>
                        </p>
                    </td>
                    <td class="text-right" title="Qtn">
                        <form action="/cart1" method="post">
                            <input type="text" name="quantity" value="<%= camps.qty %>" placeholder="1">
                        </form>


                    </td>
                    <td class="text-right" title="Price">
                        <%=camps.qotation %>
                    </td>
                    <td class="text-right" title="Total">
                        <%= camps.qty * camps.qotation %>
                    </td>
                    <td class="text-right">
                        <form action="/cart/remove" method="POST">
                            <input type="hidden" name="itemId" value="<%= camps.id %>">
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                    
                </tr>
                <% } %>
